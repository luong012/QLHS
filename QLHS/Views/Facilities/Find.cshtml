@model IEnumerable<QLHS.Models.Facility>




@{
    ViewData["Title"] = "Index";
}



@foreach (var item in Model)
{
    <div class="@(item.Fac_ID % 2 == 1 ? "site-section" : "site-section bg-light")">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto text-center mb-5 section-heading">
                    <h2 class="mb-5">@item.Fac_Name</h2>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-md-6 mb-5 mb-md-0">
                    <div class="img-border">
                        <a href=@Url.Action("Find", "Rooms", new { facID = item.Fac_ID })>
                            <span class="icon-wrap">
                            </span>
                            <img src=@item.Fac_Img alt="" class="img-fluid">
                        </a>
                    </div>

                    <img src=@item.Fac_Img alt="Image" class="img-fluid image-absolute">

                </div>
                <div class="col-md-5 ml-auto">

                    @*<div class="section-heading text-left">

                            <h2 class="mb-5">
                                @item.GetType().GetProperty("Name").GetValue(item, null)
                                <br>
                            </h2>
                            <br>

                        </div>*@
                    <p class="mb-4">

                        @item.Fac_Desc
                    </p>

                    @*<br>
                        <span class="mb-5 text-dark">
                            Giá phòng:  <i class="text-dark"> @item.GetType().GetProperty("Price").GetValue(item, null)</i>
                        </span>
                        <br>
                        <span class="mb-5 text-dark">
                            Số người:  <i class="text-dark"> @item.GetType().GetProperty("MaxCusNum").GetValue(item, null) </i>
                        </span>
                        <br>
                        <span class="mb-5 text-dark">
                            Kích thước:  <i class="text-dark"> @item.GetType().GetProperty("Size").GetValue(item, null) m <sup>2</sup></i>
                        </span>*@

                <p class="mt-4">
                    <span class="mb-5 text-dark">
                        Phone :  <i class="text-dark"> @item.Fac_Phone </i>
                    </span>
                    <br>
                    <span class="mb-5 text-dark">
                        Address :  <i class="text-dark"> @item.Fac_Address </i>
                    </span>
                    <br>

                    @if (ViewData[item.Fac_ID.ToString()].GetType().GetProperty("minPrice").GetValue(ViewData[item.Fac_ID.ToString()], null).ToString() == "0")
                    {
                        <span class="mb-5 text-dark"> <i class="text-danger"> Out of available room!!! </i>
                        </span>
                    }
                    else
                    {
                    <span class="mb-5 text-dark">
                        Just from :  <i class="text-danger"> @ViewData[item.Fac_ID.ToString()].GetType().GetProperty("minPrice").GetValue(ViewData[item.Fac_ID.ToString()], null) </i>
                    </span>
                    <br>
                    <span class="mb-5 text-dark">
                        Room Available :  <i class="text-danger"> @ViewData[item.Fac_ID.ToString()].GetType().GetProperty("availRoom").GetValue(ViewData[item.Fac_ID.ToString()], null) </i>
                    </span>
                    }

                </p>



                </div>
            </div>
        </div>
    </div>



}

