@model IEnumerable<QLHS_Admin.Models.Facility>

@{
    ViewData["Title"] = "Facility";
}

<div class="card">
    <div class="card-body">


        <div class="row">


            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead class="text-center">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Facility
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Latitude
                                </th>
                                <th>
                                    Longitude
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fac_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fac_Name)
                                    </td>
                                    <td>
                                        <img src="@item.Fac_Img" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fac_Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fac_Phone)
                                    </td>
                                    <td style="width:30%">
                                        @Html.DisplayFor(modelItem => item.Fac_Desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fac_Latitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fac_Longitude)
                                    </td>
                                    
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
