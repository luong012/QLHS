@model IEnumerable<QLHS_Admin.Models.RoomType>

@{
    ViewData["Title"] = "Room Type";
}

@using System.Globalization;


<div class="card">
    <div class="card-body">
        <h4 class="card-title text-right">
            <a asp-action="Create" class="text-primary"> <i class="fa fa-plus "> </i> Add Room Type</a>
        </h4>

        <div class="row">


            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing" class="table">
                        <thead class="text-center">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Room Type
                                </th>
                                <th>
                                    Max Customer
                                </th>
                                <th>
                                    Size
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    List of Features
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomType_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomType_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomType_MaxCusNum)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomType_Size)
                                    </td>
                                    <td class="text-right">
                                        @item.RoomType_Price.ToString("C0",new CultureInfo("vi-vn"))
                                    </td>
                                    <td>
                                        @{
                                            var list = item.RoomType_FTList.Split(';').ToList();
                                            foreach (var item2 in list)
                                            {<img src="@item2" />}
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.RoomType_ID">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.RoomType_ID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.RoomType_ID">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
